#!/bin/bash

one=(
[0]="Все мы хорошо знаем, что"
[1]="С другой стороны" 
[2]="Равным образом"
[3]="Не следует, однако, забывать, что"
[4]="Таким образом"
[5]="Повседневная практика показывает, что"
[6]="Значимость этих проблем настолько очевидна, что"
[7]="Разнообразный и богатый опыт"
[8]="Задача организации, в особенности же"
[9]="Идейные соображения высшего порядка, а также")


two=(
[0]="реализация намеченных плановых заданий"
[1]="рамки и место обучения кадров"
[2]="постоянный количественный рост и сфера нашей активности"
[3]="сложившаяся структура организации"
[4]="новая модель организации деятельности"
[5]="дальнейшее развитие различных форм деятельности"
[6]="постоянное информационно-пропагандистское обеспечение нашей деятельности"
[7]="управление и развитие структуры"
[8]="консультация с широким активом"
[9]="начало повседневной работы по формированию позиции")


three=(
[0]="играет важную роль в формировании"
[1]="требует от нас анализа"
[2]="требует определения и уточнения"
[3]="способствует подготовке и реализации"
[4]="обеспечивает широкому кругу специалистов и предпринимателей"
[5]="участие в формировании"
[6]="позволяет выполнять важные задания по разработке"
[7]="в значительной степени обуславливает создание"
[8]="позволяет в полной мере оценить значение"
[9]="проверки влечет за собой интенсивный процесс внедрения и модернизации")

four=(
[0]="существующих финансовых и административных условий. \n"
[1]="дальнейших направлений развития. \n"
[2]="системы массового участия. \n"
[3]="позиций, занимаемых участниками в отношении поставленных задач. \n"
[4]="новых предложений. \n"
[5]="направлений прогрессивного развития. \n"
[6]="системы обучения кадров, соответствующей насущным потребностям. \n"
[7]="соответсвующих условий активизации. \n"
[8]="модели развития. \n"
[9]="форм воздействия. \n")


array[0]=$((RANDOM%10))
i=1

until [[ ${#array[@]} -eq 10 ]]; do
	num=$((RANDOM%10))
	if [[ ! $(echo ${array[@]} | grep $num) ]]
	then array[i]=$num; let "i+=1"
	fi
done

clear
echo "Здравствуйте, уважаемые коллеги, соратники и друзья."; echo

for i in $(seq 0 9); do
echo  -e "${one[$(echo ${array[i]})]} ${two[$(echo ${array[i]})]} ${three[$(echo ${array[i]})]} ${four[$(echo ${array[i]})]}"
let "i-=1"
done

exit 0
